{
	"name": "reminders",
	"displayName": "Reminders",
	"description": "Reminders",
	"version": "1.1.1",
	"publisher": "mrdoomy",
	"icon": "assets/icon.png",
	"galleryBanner": {
		"color": "#fff8e1",
		"theme": "light"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mrdoomy/reminders.git"
	},
	"engines": {
		"vscode": "^1.29.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"productivity",
		"reminders"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "reminders.addReminder",
				"title": "%extension.addReminder.title%"
			},
			{
				"command": "reminders.clearReminders",
				"title": "%extension.clearReminders.title%"
			},
			{
				"command": "reminders.showReminders",
				"title": "%extension.showReminders.title%"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Reminders Configuration",
			"properties": {
				"reminders.list": {
					"type": "array",
					"description": "%extension.list.description%",
					"default": []
				},
				"reminders.preserve": {
					"type": "boolean",
					"description": "%extension.preserve.description%",
					"default": false
				},
				"reminders.shift": {
					"type": "number",
					"description": "%extension.shift.description%",
					"default": 0
				}
			}
		},
		"keybindings": [
			{
				"command": "reminders.addReminder",
				"key": "shift+alt+r"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode-nls": "^4.1.1"
	},
	"devDependencies": {
		"@types/node": "^12.0.8",
		"tslint": "^5.17.0",
		"typescript": "^3.5.2",
		"vscode": "^1.1.34",
		"vscode-nls-dev": "^3.2.6"
	},
	"license": "Beerware"
}
